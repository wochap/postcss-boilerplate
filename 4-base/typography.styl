body
  color: $base-font-color
  font-family: $base-font-family
  font-size: $base-font-size
  line-height: $base-line-height

h1,
h2,
h3,
h4,
h5,
h6
  margin(0 0 space('3', em))
  color: $heading-color
  font-family: $heading-font-family
  font-weight: $heading-font-weight
  line-height: $heading-line-height

h1 { font-size: $font-size-h1 }
h2 { font-size: $font-size-h2 }
h3 { font-size: $font-size-h3 }
h4 { font-size: $font-size-h4 }
h5 { font-size: $font-size-h5 }
h6 { font-size: $font-size-h6 }

p
  margin($paragraph-margin-top 0 $paragraph-margin-top)

  & + p
    margin($paragraph-margin-bottom 0 $paragraph-margin-top)

a
  color: inherit
  text-decoration: none
  transition: color $base-duration $base-timing

a[href]:not([class])
  color: $link-color

  &:active,
  &:focus,
  &:hover
    color: $link-color-hover

hr
  directional-property( "border", false, null null $base-border )
  margin(space('3') 0)
  box-sizing: border-box

img,
picture
  margin(0)
  max-width: 100%

pre,
code
  background: $light-grey
  color: $black
  font-size: 1.4rem
  word-break: break-all
  word-wrap: break-word

pre
  display: block
  margin: space('4', 'rem') 0
  padding: space('4', 'rem')

blockquote
  border-left: .2rem solid $primary-color
  font-style: italic
  margin: space('4', 'rem') 0
  padding-left: space('4', 'rem')
