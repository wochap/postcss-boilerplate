table
  border-collapse: collapse
  table-layout: fixed
  width: 100%

th
  fw('s-bold')
  border-bottom: 2px solid shade($base-border-color, 25%)
  padding: space('2', 'em') 0
  text-align: left

td
  border-bottom: 1px solid shade($base-border-color, 25%)
  padding: space('2', 'em') 0

tr,
td,
th
  vertical-align: middle
