//  Cols
//  ==========================================================================
//  grid class system
//
//  inspiration: http://bulma.io/documentation/grid/
//  inspiration: http://flexboxgrid.com/


//  Variables
//  --------------------------------------------------------------------------

$cols-gutter   = 16px
$cols-debug-bg = #FC6E51
$cols-number   = 12

//  Mixins
//  --------------------------------------------------------------------------

make-col($col = false, $printAll = true)
  if $printAll
    flex: 1 1 0
    min-height: 0
    min-width: 0
    padding: ($cols-gutter / 2)
  if $col
    flex none
    width: ($col / $cols-number) * 100%

cols-debug()
  position relative

  &::after
    background: rgba($cols-debug-bg, 0.25)
    bottom: 0
    height: 100%
    left: 0
    position: absolute
    right: 0
    top: 0
    transition: opacity 1s ease-out
    width: 100%
    z-index: -1


//  Grid
//  --------------------------------------------------------------------------

object('cols', @(){
  align-items: flex-start
  display: flex
  flex-direction: row
  flex-wrap wrap
  margin-left: ($cols-gutter / -2)
  margin-right: ($cols-gutter / -2)
  width: auto
  if $debug-cols-object {
    cols-debug()
  }

  & + & {
    margin-bottom: $cols-gutter
  }

  element('col', true, @(){
    make-col()
    if $debug-cols-object {
      cols-debug()
    }

    for $col in (1..$cols-number) {
      modifier($col, @(){
        make-col($col, false)
      })
    }

    for $col in (1..$cols-number) {
      modifier($col, @(){
        for $size, $value in $breakpoints {
          +desde($size) {
            suffix($size, @(){
              make-col($col, false)
            })
          }
        }
      })
    }
  })

  modifier('gapless', @(){
    margin-left: 0
    margin-right: 0

    & + & {
      margin-bottom: 0
    }

    element('col', true, @(){
      padding: 0
    })
  })
})

