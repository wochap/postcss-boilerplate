//  Layout
//  ==========================================================================


// center a block
center($max-width = $wrapper-width-xl, $padding = false)
  display: block unless @display
  margin-left: auto
  margin-right: auto
  max-width: $max-width
  width: 100%
  if $padding != false
    padding-left: $padding
    padding-right: $padding

// create a wrapper
wrapper()
  center()
  +hasta('lg')
    max-width: $wrapper-width-md
  +desde-hasta('lg', 'xl')
    max-width: $wrapper-width-lg

// create a block element
block()
  display: block unless @display
  width: 100%

// clearfix
clearfix()
  &::after
    clear: both
    content: ''
    display: table
