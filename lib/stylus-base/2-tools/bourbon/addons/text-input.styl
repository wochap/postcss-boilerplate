// Generates variables for all text-based inputs. Please note that you must use interpolation on the variable: `#{$all-text-inputs}`.
//
// @require assign-inputs
//
// @type List

$all-text-inputs = 'input[type="color"],
                    input[type="date"],
                    input[type="datetime"],
                    input[type="datetime-local"],
                    input[type="email"],
                    input[type="month"],
                    input[type="number"],
                    input[type="password"],
                    input[type="search"],
                    input[type="tel"],
                    input[type="text"],
                    input[type="time"],
                    input[type="url"],
                    input[type="week"],
                    input:not([type]),
                    textarea'
