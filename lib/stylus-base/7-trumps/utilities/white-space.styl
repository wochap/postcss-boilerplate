//  Margins
//  --------------------------------------------------------------------------

utility('m0', @(){ margin: 0 })
utility('mt0', @(){ margin-top: 0 })
utility('mr0', @(){ margin-right: 0 })
utility('mb0', @(){ margin-bottom: 0 })
utility('ml0', @(){ margin-left: 0 })

for $space, $value in $spaces
  utility('m' + $space, @(){ margin: $value })
  utility('mt' + $space, @(){ margin-top: $value })
  utility('mr' + $space, @(){ margin-right: $value })
  utility('mb' + $space, @(){ margin-bottom: $value })
  utility('ml' + $space, @(){ margin-left: $value })

  utility('py' + $space, @(){
    margin-top:    $value;
    margin-bottom: $value;
  })
  utility('px' + $space, @(){
    margin-left:  $value;
    margin-right: $value;
  })
  utility('mxn' + $space, @(){
    margin-left:  $value * -1;
    margin-right: $value * -1;
  })

utility('mx-auto', @(){
  margin-left: auto;
  margin-right: auto;
})


//  Padding
//  --------------------------------------------------------------------------

utility('p0', @(){ padding: 0 })
utility('pt0', @(){ padding-top: 0 })
utility('pr0', @(){ padding-right: 0 })
utility('pb0', @(){ padding-bottom: 0 })
utility('pl0', @(){ padding-left: 0 })

for $space, $value in $spaces
  utility('p' + $space, @(){ padding: $value })
  utility('pt' + $space, @(){ padding-top: $value })
  utility('pr' + $space, @(){ padding-right: $value })
  utility('pb' + $space, @(){ padding-bottom: $value })
  utility('pl' + $space, @(){ padding-left: $value })

  utility('py' + $space, @(){
    padding-top:    $value;
    padding-bottom: $value;
  })
  utility('px' + $space, @(){
    padding-left:  $value;
    padding-right: $value;
  })
