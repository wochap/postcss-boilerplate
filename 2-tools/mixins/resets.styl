//  Resets
//  ==========================================================================


input-reset()
  appearance: none
  background: $transparent
  border: 0
  outline: 0
  padding: 0

  &:autofill
    box-shadow: 0 0 0 1000px $transparent inset

list-reset()
  list-style: none
  margin-bottom 0
  margin-top 0
  padding-left: 0

link-reset()
  border: none
  color: inherit
  text-decoration: none

  &:active
  &:focus
  &:hover
    color: inherit
