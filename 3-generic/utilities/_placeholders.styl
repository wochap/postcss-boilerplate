$background-center
	background-position: center
	background-repeat: no-repeat
	background-size: cover

$input-reset
	appearance: none
	background: $transparent
	border: 0
	outline: 0
	padding: 0

	&:-webkit-autofill
		box-shadow: 0 0 0 1000px $transparent inset

$list-reset
	margin(0 null)
	padding-left: 0
	list-style: none
