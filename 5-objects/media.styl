//  Media
//  ==========================================================================


+object('media')
  align-items: flex-start
  display: flex
  flex-direction: row
  padding: $space-3

  element('left', @(){
    margin-right: $space-2
    order: 1
  })

  element('body', @(){
    flex: 1 1 0
    min-height: 0
    min-width: 0
    order: 2
  })

  state('reverse', @(){
    flex-direction: row-reverse

    element('left', @(){
      margin-left: $space-2
      margin-right: 0
    })
  })
